{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "outDir": "dist",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "moduleResolution": "NodeNext",
    "paths": {
      "*": ["./node_modules/*", "../node_modules/*"]
    }
  },
  "include": ["src"]
}
